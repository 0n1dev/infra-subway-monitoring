<?xml version="1.0" encoding="UTF-8" ?>

<configuration debug="false">

    <!--spring boot의 기본 logback base.xml은 그대로 가져간다.-->
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <include resource="console-appender.xml" />
    <include resource="file-appender.xml" />
    <include resource="json-appender.xml" />

    <!--    logger name이 console일때 적용할 appender를 등록한다.-->
    <logger name="console-appender" level="TRACE" >
        <appender-ref ref="console-appender" />
    </logger>

    <!--    logger name이 file일때 적용할 appender를 등록한다.-->
    <logger name="file-appender" level="INFO" >
        <appender-ref ref="file-appender" />
    </logger>

    <!--    logger name이 file일때 적용할 appender를 등록한다.-->
    <logger name="json-appender" level="INFO" >
        <appender-ref ref="json-appender" />
    </logger>

</configuration>
